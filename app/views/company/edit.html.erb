<h1>Editing company</h1>
<%#= render 'form' %>
 
 <%#= link_to 'Back', company_path %>

 
<%#= form_for :company, url: company_path(@company), method: :patch do |f| %>
<%= form_for :company, url: company_path, method: :put do |f| %>

 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>

  </p>

  <p>
    <%= f.label :country_id %><br>
    <%#= f.text_area :country_id %>
    <%= f.select(:country_id, Country.all.collect{|u| [u.country_name]}, :prompt => 'select')%>
  </p>

  <p>
    <%= f.label :state_id %><br>
    <%#= f.text_area :state_id %>
    <%= f.select(:state_id, State.all.collect{|u| [u.state_name]}, :prompt => 'select')%>
  </p>

  <p>
    <%= f.label :city_id %><br>
    <%#= f.text_area :city_id %>
    <%= f.select(:city_id, City.all.collect{|u| [u.city_name]}, :prompt => 'select')%>
  </p>

 
  
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>