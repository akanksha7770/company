<%#= form_for @company do |f| %>
 
  <%= form_for :company, url: company_index_path do |f| %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :country_id %><br>
    <%#= f.text_area :country_id %>
    <%= f.select(:country_id, Country.all.collect{|u| [u.country_name, u.id]}, :prompt => 'select')%> 
  </p>
  
   <p>
    <%= f.label :state_id %><br>
    <%#= f.text_area :state_id %>
    <%= f.select(:state_id, State.all.collect{|u| [u.state_name, u.id]}, :prompt => 'select')%>
  </p>

  <p>
    <%= f.label :city_id %><br>
    <%#= f.text_area :city_id %>
    <%= f.select(:city_id, City.all.collect{|u| [u.city_name, u.id]}, :prompt => 'select')%>
  </p>

  <p>
    <%= f.label :postcode %><br>
    <%= f.text_area :postcode %>
  </p>

   <p>
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date %>
  </p>

   <p>
    <%= f.label :active %><br>
    <%#= f.text_area :active %>
    <%= f.check_box :active %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>